AR            = @AR@
RM            = @RM@
CC            = @CC@
CFLAGS        = @CFLAGS@
LDFLAGS       = @LDFLAGS@
HAVE_EPOLL    = @HAVE_EPOLL@
HAVE_POLL     = @HAVE_POLL@
HAVE_KQUEUE   = @HAVE_KQUEUE@
HAVE_SELECT   = @HAVE_SELECT@

HAVE_AFUNIX_H = @HAVE_AFUNIX_H@

TARGET_SYSTEM = @TARGET_SYSTEM@
BUILD_SYSTEM  = @BUILD_SYSTEM@

INCLUDE = $(ROOT)/include
LIB = $(ROOT)/lib
BIN = $(ROOT)/bin

CFLAGS += -Wall --pedantic -Werror -Wno-format -std=c99 -I$(ROOT)/src/include -I$(INCLUDE) -fno-strict-aliasing 

DISABLE_DEBUG = @DISABLE_DEBUG@
DISABLE_CASSERT = @DISABLE_CASSERT@

ifeq ($(DISABLE_DEBUG),yes)
	CFLAGS += -O2
else
	CFLAGS += -g -O0
endif

ifeq ($(DISABLE_CASSERT),yes)
	CFLAGS += -DNDEBUG
endif

